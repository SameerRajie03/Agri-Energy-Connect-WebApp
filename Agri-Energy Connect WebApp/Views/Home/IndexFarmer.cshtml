@{
    Layout = "_LayoutFarmer";
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-dismissible alert-success">
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        <strong>Success</strong> @TempData["SuccessMessage"].
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-dismissible alert-warning">
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        <strong>Warning</strong> @TempData["ErrorMessage"].
    </div>
}

<h1>Agri-Energy Connect</h1>


<div class="container mt-4">
    <div class="row">
        <div class="card text-white bg-primary mb-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Create a New Poduct Listing</h5>
                    <p class="card-text"></p>
                    <a asp-page="/Products/Create" class="btn btn-success">Add Product</a>
                </div>
            </div>
        </div>

        <div class="card text-white bg-secondary mb-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">View a List of Your Products</h5>
                    <p class="card-text"></p>
                    @{
                        var farmerId = Agri_Energy_Connect_WebApp.Workers.GetSet.UserFarmer;
                    }
                    <a asp-action="Index" asp-route-id="@farmerId">View Products</a>
                </div>
            </div>
        </div>

        <div class="card text-white bg-dark mb-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Logout of Account</h5>
                    <p class="card-text"></p>
                    <a asp-page="/LoginView/Login" class="btn btn-light">Log Out</a>
                </div>
            </div>
        </div>

    </div>
</div>
